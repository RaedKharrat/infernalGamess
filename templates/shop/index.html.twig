{% extends 'frontBase.html.twig' %}

{% block title %}- Shop{% endblock %}

{% block body %}




    <!-- Page top section -->
    <section class="page-top-section set-bg" data-setbg="{{ asset('front/img/page-top-bg/1.jpg') }}">
        <div class="page-info">
            <h2>Products</h2>
            <div class="site-breadcrumb">
                <a href="{{ asset('/') }}">Home</a>  
