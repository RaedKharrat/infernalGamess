{% extends 'frontBase.html.twig' %}
{% block title %}- Shop{% endblock %}
{% block body %}
    <div class="main-panel">
        <div class="content-wrapper">
            <div class="page-header">
                <h3 class="page-title"> Commandes </h3>

            </div>
            <div class="col-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                {{ form_start(form, {'attr':{'novalidate':'novalidate'}}) }}
                            
                            <div class="form-group">
                                <label for="productDescription">Total</label>
                                {{ form_widget(form.total,{'attr':{'class':'form-control'}}) }}
                                 <div class="text-danger">{{ form_errors(form.total) }}</div>


                            </div>
                            <div>
                                <a class="btn btn-success" href="{{ path("stripe") }}">Payment</a>
                            </div>
                            
                            <button type="submit" class="btn btn-primary mr-2">Submit</button>
                            <a href="{{asset('/admin/products')}}" class="btn btn-dark">Cancel</a>
                        {{form_end(form)}}
                    </div>
                </div>
            </div>
{% endblock %}